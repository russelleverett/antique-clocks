@model IEnumerable<Messages>
@{
    ViewBag.MenuId = "#messages";
}

<div class="container-fluid">
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th class="col-md-2">Start Date</th>
                <th class="col-md-2">End Date</th>
                <th class="col-md-2">
                    <a href="/admin/messages/add" class="btn btn-sm btn-success">Add Message</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model) {
                <tr>
                    <td>@message.Id</td>
                    <td>@message.Message</td>
                    <td>@message.StartDate.ToString("dd-MM-yyyy")</td>
                    <td>@(message.EndDate?.ToString("dd-MM-yyyy") ?? "N/A")</td>
                    <td>
                        <a href="/admin/messages/edit/@message.Id" class="btn btn-sm"><span class="glyphicon glyphicon-edit">&nbsp;Edit</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

